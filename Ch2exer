public class Date { public static void main(String[] arg) {     String day = "Friday";     int date = 9;     String month = "March";     int year = 2018;            System.out.println ("American format:" );  System.out.print(day+ ", ");  System.out.print(month);  System.out.print(" ");  System.out.print(date);  System.out.print(", ");  System.out.println(year);  System.out.println ("European format:" );  System.out.print(day+" ");  System.out.print(date);  System.out.print(" ");  System.out.print(month);  System.out.print(" ");  System.out.print(year);     }}
